<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:src="@mipmap/login_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/kakaoLogin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@mipmap/kakao_login_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/naverLogin_Button" />

        <ImageView
            android:id="@+id/googleLogin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:clickable="true"
            android:src="@mipmap/google_login_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kakaoLogin_button" />

        <ImageView
            android:id="@+id/naverLogin_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:src="@mipmap/naver_login_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_logo" />

        <Button
            android:id="@+id/appleLogin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:buttonBarPositiveButtonStyle"
            android:onClick="onClick"
            android:background="@drawable/default_outline_round"
            app:layout_constraintTop_toBottomOf="@id/googleLogin_button"
            android:text="애플로그인"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            app:layout_constraintBottom_toTopOf="@id/naverLogin_Button"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="로그아웃"/>

        <Button
            android:id="@+id/kakaologout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            app:layout_constraintBottom_toTopOf="@id/logout"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="카카오 로그아웃"/>

        <Button
            android:id="@+id/naverlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            app:layout_constraintBottom_toTopOf="@id/kakaologout"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="네이버 로그아웃"/>


        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            app:layout_constraintBottom_toTopOf="@id/naverLogin_Button"
            app:layout_constraintStart_toStartOf="parent"
            android:text="삭제"/>

        <Button
            android:id="@+id/kakaodelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/delete"
            android:text="카카오 삭제"/>

        <Button
            android:id="@+id/naverDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/kakaodelete"
            android:text="네이버삭제 삭제"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
