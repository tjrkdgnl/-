<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/plz_agreementText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="11sp"
            android:text="약관을 동의해주세요."
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/all_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="onClick"
            android:src="@mipmap/big_checkbox_empty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plz_agreementText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:lineSpacingExtra="6sp"
            android:text="전체동의"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/all_check"
            app:layout_constraintStart_toEndOf="@id/all_check"
            app:layout_constraintTop_toTopOf="@id/all_check" />

        <View
            android:id="@+id/all_check_border"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/all_check" />

        <ImageView
            android:id="@+id/app_agreemnt_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="onClick"
            android:src="@mipmap/mini_checkbox_empty"
            app:layout_constraintTop_toBottomOf="@id/all_check_border"

            />

        <LinearLayout
            android:id="@+id/app_agreement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="@id/app_agreemnt_checkbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/app_agreemnt_checkbox"
            app:layout_constraintTop_toTopOf="@id/app_agreemnt_checkbox">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="3"
                android:text="이용약관 동의 (필수)"
                android:textColor="#808080"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>


        <ImageView
            android:id="@+id/private_agreemnt_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="onClick"
            android:src="@mipmap/mini_checkbox_empty"
            app:layout_constraintTop_toBottomOf="@id/app_agreemnt_checkbox" />

        <LinearLayout
            android:id="@+id/private_agreement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintBottom_toBottomOf="@id/private_agreemnt_checkbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/private_agreemnt_checkbox"
            app:layout_constraintTop_toTopOf="@id/private_agreemnt_checkbox">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="3"
                android:lineSpacingExtra="4sp"
                android:text="개인정보 취급방침 (필수)"
                android:textColor="#808080"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
