<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="component"
            type="com.model.alchol_detail.AlcholComponentData" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/component_parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alchol_component"
        android:orientation="vertical">

        <TextView
            android:id="@+id/component_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="9sp"
            android:text="@{component.title.toString()}"
            android:textColor="#ff9200"
            android:textSize="20sp"
            android:textStyle="normal"
            tools:text="IBU" />

        <TextView
            android:id="@+id/component_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="13dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="7sp"
            android:text="@{component.value.toString()}"
            android:textColor="#3f3f3f"
            android:textSize="28sp"
            android:textStyle="normal"
            tools:text="35" />

    </LinearLayout>
</layout>
