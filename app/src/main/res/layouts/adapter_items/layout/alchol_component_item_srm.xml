<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints">
    <data>
        <variable
            name="componentSRM"
            type="com.model.alchol_detail.AlcholComponentData" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/component_parentLayout"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="@drawable/alchol_component_srm"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/component_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="9sp"
                android:text="@{componentSRM.mainTitle.toString()}"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal"
                tools:text="IBU"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
            <View
                android:id="@+id/component_border"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/white"
                android:layout_marginStart="18.5dp"
                android:layout_marginEnd="18.5dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/component_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/component_srm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="normal"
                android:textSize="30sp"
                android:text="@{componentSRM.contents.toString()}"
                android:textColor="@color/white"
                android:lineSpacingExtra="10sp"
                tools:text="30"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="18.5dp"
                android:layout_marginEnd="18.5dp"
                android:ellipsize="middle"
                app:layout_constraintTop_toBottomOf="@id/component_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
