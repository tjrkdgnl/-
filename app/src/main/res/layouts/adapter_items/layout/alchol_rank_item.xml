<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints">

    <data>
        <variable
            name="alcholRank"
            type="com.model.alchol_ranking.AlcholList" />
    </data>

    <LinearLayout
        android:id="@+id/alcholRank_parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/monthly_bookMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bookmark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                />
            <TextView
                android:id="@+id/ranking_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:paddingEnd="0.96dp"
                app:layout_constraintStart_toStartOf="@id/monthly_bookMark"
                app:layout_constraintEnd_toEndOf="@id/monthly_bookMark"
                app:layout_constraintBottom_toBottomOf="@id/monthly_bookMark"
                app:layout_constraintTop_toTopOf="@id/monthly_bookMark"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/monthly_imageView"
                android:layout_width="200dp"
                android:layout_height="260dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/recommenditem_shadow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    setting_icon_str="@{alcholRank.media.get(0).mediaResource.medium.src}"
                    android:scaleType="fitCenter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/monthly_breweryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333333"
                android:lineSpacingExtra="3sp"
                android:gravity="end"
                android:hint="좋은술"
                android:text="@{alcholRank.brewery.get(0).name.toString()}"
                android:paddingEnd="3dp"
                android:textStyle="normal"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintEnd_toStartOf="@id/monthly_imageView"
                app:layout_constraintTop_toTopOf="@id/monthly_imageView"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/monthly_alcholNameK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#333333"
                android:gravity="end"
                android:hint="천비향"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{alcholRank.name.kr.toString()}"
                android:textStyle="normal"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toBottomOf="@id/monthly_breweryName"
                app:layout_constraintEnd_toEndOf="@id/monthly_breweryName"
                />

            <TextView
                android:id="@+id/monthly_alcholNameE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#c7c7c7"
                android:lineSpacingExtra="4sp"
                android:gravity="end"
                android:text="@{alcholRank.name.en.toString()}"
                android:hint="Cheon Bi Hyang Tak Ju"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toBottomOf="@id/monthly_alcholNameK"
                app:layout_constraintEnd_toEndOf="@id/monthly_alcholNameK" />

            <TextView
                android:id="@+id/monthly_breweryLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#b1b1b1"
                android:lineSpacingExtra="4sp"
                android:gravity="end"
                android:text="@{alcholRank.brewery.get(0).location.toString()}"
                android:hint="경기도 평택시"
                android:textStyle="normal"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toBottomOf="@id/monthly_alcholNameE"
                app:layout_constraintEnd_toEndOf="@id/monthly_alcholNameE" />

            <TextView
                android:id="@+id/monthly_bestComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffb95b"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5sp"
                android:textStyle="normal"
                android:text="저온숙성을 거친 프리미엄 막걸리"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintTop_toBottomOf="@id/monthly_breweryLocation"
                app:layout_constraintEnd_toEndOf="@id/monthly_breweryLocation"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주류 정보 보기   \u003e"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/monthly_bestComment"
                app:layout_constraintBottom_toBottomOf="@id/monthly_imageView"
                app:layout_constraintEnd_toStartOf="@id/monthly_imageView" />

            <View
                android:id="@+id/monthly_boundary"
                android:layout_width="226dp"
                android:layout_height="0.37dp"
                android:background="@color/light_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>