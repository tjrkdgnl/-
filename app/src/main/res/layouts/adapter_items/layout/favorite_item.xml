<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <data>
        <variable
            name="alcohol"
            type="com.model.favorite.AlcoholList" />
    </data>

    <LinearLayout
        android:id="@+id/gridItem_ParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imageView_favorite_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/default_outline_round"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/grid_mainImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gridItem_GridAhchol_img_height"
                android:scaleType="fitCenter"
                setting_icon_str="@{alcohol.media.get(0).mediaResource.medium.src}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_GridAhchol_img">

            <TextView
                android:id="@+id/textView_GridAlcoholName_K"
                android:layout_width="0dp"
                android:fontFamily="@font/apple_sd_gothic_neo_b"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="11dp"
                android:lineSpacingExtra="4sp"
                android:textColor="#333333"
                android:text="@{alcohol.name.kr.toString()}"
                android:textSize="@dimen/gridItem_GridAlcoholName_K_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="천비향" />

            <TextView
                android:id="@+id/textView_GridAlcoholOrigin"
                android:layout_width="0dp"
                android:fontFamily="@font/apple_sd_gothic_neo_sb"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:maxLines="1"
                android:text="@{alcohol.brewery.get(0).location.toString()}"
                android:ellipsize="end"
                android:textSize="@dimen/gridItem_origin_textSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_GridAlcoholName_K"
                tools:text="한국 경기도 평택" />



            <ImageView
                android:id="@+id/imageView_favoriteHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/gridItem_gridHeart_marginBottom"
                android:background="@null"
                android:src="@mipmap/small_heart_empty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textView_gridHeartCount"
                app:layout_constraintTop_toBottomOf="@id/textView_GridAlcoholOrigin"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/textView_gridHeartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="2dp"
                android:lineSpacingExtra="3sp"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/gridItem_default_textsize"
                android:text="@{alcohol.like_count.toString()}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_favoriteHeart"
                app:layout_constraintStart_toEndOf="@id/imageView_favoriteHeart"
                app:layout_constraintTop_toTopOf="@id/imageView_favoriteHeart"
                app:layout_constraintEnd_toStartOf="@id/imageView_gridcommnet"
                tools:text="51" />

            <ImageView
                android:id="@+id/imageView_gridcommnet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.1dp"
                android:layout_marginTop="@dimen/gridItem_gridHeart_marginTop"
                android:background="@null"
                android:src="@mipmap/small_talk"
                app:layout_constraintBottom_toBottomOf="@id/textView_gridHeartCount"
                app:layout_constraintEnd_toStartOf="@id/textView_gridCommentCount"
                app:layout_constraintStart_toEndOf="@id/textView_gridHeartCount"
                app:layout_constraintTop_toTopOf="@id/textView_gridHeartCount"/>

            <TextView
                android:id="@+id/textView_gridCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:lineSpacingExtra="3sp"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/gridItem_default_textsize"
                android:text="@{alcohol.review.review_count.toString()}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_gridcommnet"
                app:layout_constraintStart_toEndOf="@id/imageView_gridcommnet"
                app:layout_constraintTop_toTopOf="@id/imageView_gridcommnet"
                app:layout_constraintEnd_toStartOf="@id/category_grid_eye"
                tools:text="60" />

            <ImageView
                android:id="@+id/category_grid_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.1dp"
                android:background="@null"
                android:src="@mipmap/small_alcohol"
                app:layout_constraintEnd_toStartOf="@id/category_grid_eyeCount"
                app:layout_constraintTop_toTopOf="@id/textView_gridCommentCount"
                app:layout_constraintBottom_toBottomOf="@id/textView_gridCommentCount"
                app:layout_constraintStart_toEndOf="@id/textView_gridCommentCount"
                />

            <TextView
                android:id="@+id/category_grid_eyeCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:lineSpacingExtra="3sp"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/gridItem_default_textsize"
                android:text="@{alcohol.abv.toString()}"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="@id/category_grid_eye"
                app:layout_constraintStart_toEndOf="@id/category_grid_eye"
                app:layout_constraintTop_toTopOf="@id/category_grid_eye"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="60" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>