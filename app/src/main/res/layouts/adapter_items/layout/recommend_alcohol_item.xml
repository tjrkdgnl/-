<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <data>

        <variable
            name="recommendItem"
            type="com.model.recommend_alcohol.AlcoholList" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/pageMargin"
        android:layout_marginEnd="@dimen/pageMargin"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recommend_parentLayout"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:background="@drawable/recommenditem_shadow">


            <ImageView
                android:id="@+id/activityMain_recommend_img"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                android:scaleType="fitCenter"
                setting_icon_str="@{recommendItem.media.get(0).mediaResource.medium.src}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/activityMain_recommend_alcoholName"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activityMain_recommend_alcoholName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2sp"
                android:maxLines="1"
                android:paddingStart="2dp"
                android:paddingEnd="10dp"
                android:text="@{recommendItem.name.kr.toString()}"
                android:textColor="#333333"
                android:textSize="@dimen/recommand_alcoholName"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/activityMain_degree_img"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activityMain_recommend_img"
                tools:text="백세주" />

            <TextView
                android:id="@+id/activityMain_alcoholDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:lineSpacingExtra="3sp"
                android:text="@{recommendItem.abv.toString()}"
                android:textColor="@color/black"
                android:textSize="@dimen/recommand_alcoholNumber"
                app:layout_constraintBottom_toBottomOf="@id/activityMain_degree_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/activityMain_degree_img"
                tools:text="19%" />

            <ImageView
                android:id="@+id/activityMain_degree_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/alcohol"
                app:layout_constraintBottom_toBottomOf="@id/activityMain_recommend_alcoholName"
                app:layout_constraintEnd_toStartOf="@+id/activityMain_alcoholDegree"
                app:layout_constraintTop_toTopOf="@id/activityMain_recommend_alcoholName" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/activityMain_recommend_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/activityMain_recommend_alcoholName"
                app:layout_constraintTop_toBottomOf="@id/activityMain_recommend_alcoholName"
                app:srb_clearRatingEnabled="true"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@mipmap/middle_star_empty"
                app:srb_drawableFilled="@mipmap/middle_star_full"
                app:srb_isIndicator="false"
                app:srb_minimumStars="0"
                app:srb_numStars="5"
                app:srb_rating="0"
                app:srb_scrollable="false"
                app:srb_starPadding="1.5dp"
                app:layout_constraintStart_toEndOf="@id/recommendAlcohol_ratingBarScore"
                app:srb_stepSize="0.5" />

            <TextView
                android:id="@+id/recommendAlcohol_ratingBarScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/recommand_alcoholNumber"
                android:text="@{recommendItem.review.score.toString()}"
                app:layout_constraintBottom_toBottomOf="@id/activityMain_recommend_ratingBar"
                app:layout_constraintStart_toEndOf="@id/activityMain_recommend_ratingBar"
                app:layout_constraintTop_toTopOf="@id/activityMain_recommend_ratingBar"
                tools:text="3.7" />

            <TextView
                android:id="@+id/activityMain_likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="3sp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/recommand_alcoholNumber"
                app:layout_constraintBottom_toBottomOf="@id/activtyMain_like_img"
                app:layout_constraintEnd_toEndOf="@id/activityMain_alcoholDegree"
                app:layout_constraintStart_toStartOf="@id/activityMain_alcoholDegree"
                app:layout_constraintTop_toTopOf="@id/activtyMain_like_img"
                 />

            <ImageView
                android:id="@+id/activtyMain_like_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@mipmap/empty_heart"
                app:layout_constraintBottom_toBottomOf="@id/recommendAlcohol_ratingBarScore"
                app:layout_constraintEnd_toEndOf="@id/activityMain_degree_img"
                app:layout_constraintStart_toStartOf="@id/activityMain_degree_img"
                app:layout_constraintTop_toTopOf="@id/recommendAlcohol_ratingBarScore" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>