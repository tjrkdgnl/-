<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="alchol"
            type="com.model.alchol_category.AlcholList" />
    </data>

    <LinearLayout
        android:id="@+id/listItem_parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/ligthGrey2"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageView_listAhchol_img"
                android:layout_width="@dimen/listItem_listAhchol_img_size"
                android:layout_height="@dimen/listItem_listAhchol_img_size"
                android:layout_marginStart="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/list_mainImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    setting_icon_str="@{alchol.media.get(0).mediaResource.small.src.toString()}"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView_listAlcholName_K"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4sp"
                android:textColor="#333333"
                android:textSize="@dimen/list_item_listAlcholName_K_textsize"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{alchol.name.kr.toString()}"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView_listAhchol_img"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="천비향"
                />

            <TextView
                android:id="@+id/textView_listAlcholOrigin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2sp"
                android:textSize="@dimen/list_item_listAlcholName_E_textsize"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{alchol.brewery.get(0).location.toString()}"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/textView_listAlcholName_K"
                app:layout_constraintTop_toBottomOf="@id/textView_listAlcholName_K"
                tools:text="한국 경기도 평택" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/ratingBar_listRatingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/textView_listAlcholName_K"
                app:layout_constraintTop_toBottomOf="@id/textView_listAlcholOrigin"
                app:srb_clearRatingEnabled="true"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@mipmap/middle_star_empty"
                app:srb_drawableFilled="@mipmap/middle_star_full"
                app:srb_isIndicator="false"
                app:srb_minimumStars="0"
                app:srb_numStars="5"
                app:srb_rating="0"
                app:srb_scrollable="false"
                app:srb_starPadding="1.5dp"
                app:srb_stepSize="0.5" />


            <TextView
                android:id="@+id/textView_listRatingBarCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:lineSpacingExtra="3sp"
                android:text="@{alchol.review.score.toString()}"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/gridItem_default_textsize"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/ratingBar_listRatingbar"
                app:layout_constraintStart_toEndOf="@id/ratingBar_listRatingbar"
                app:layout_constraintTop_toTopOf="@id/ratingBar_listRatingbar"
                tools:text="3.7" />

            <ImageView
                android:id="@+id/imageView_listHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/listitem_heartImg_marginTop"
                android:background="@null"
                android:src="@mipmap/small_heart_empty"
                app:layout_constraintStart_toStartOf="@id/textView_listAlcholName_K"
                app:layout_constraintTop_toBottomOf="@id/ratingBar_listRatingbar" />

            <TextView
                android:id="@+id/textView_listHeartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:lineSpacingExtra="3sp"
                android:text="@{alchol.likeCount.toString()}"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/gridItem_default_textsize"
                app:layout_constraintBottom_toBottomOf="@id/imageView_listHeart"
                app:layout_constraintStart_toEndOf="@id/imageView_listHeart"
                app:layout_constraintTop_toTopOf="@id/imageView_listHeart"
                tools:text="51" />

            <ImageView
                android:id="@+id/imageView_listcommnet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.1dp"
                android:background="@null"
                android:src="@mipmap/talk"
                app:layout_constraintBottom_toBottomOf="@id/textView_listHeartCount"
                app:layout_constraintStart_toEndOf="@id/textView_listHeartCount"
                app:layout_constraintTop_toTopOf="@id/textView_listHeartCount" />

            <TextView
                android:id="@+id/textView_listCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:lineSpacingExtra="3sp"
                android:text="@{alchol.review.reviewCount.toString()}"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/gridItem_default_textsize"
                app:layout_constraintBottom_toBottomOf="@id/imageView_listcommnet"
                app:layout_constraintStart_toEndOf="@id/imageView_listcommnet"
                app:layout_constraintTop_toTopOf="@id/imageView_listcommnet"
                tools:text="60" />

            <ImageView
                android:id="@+id/imageView_listAlchol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.1dp"
                android:background="@mipmap/small_alchol"
                app:layout_constraintBottom_toBottomOf="@id/list_eyeCount"
                app:layout_constraintStart_toEndOf="@id/list_eyeCount"
                app:layout_constraintTop_toTopOf="@id/list_eyeCount" />

            <TextView
                android:id="@+id/textView_listAlcholDosu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:lineSpacingExtra="3sp"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/gridItem_default_textsize"
                android:text="@{alchol.abv.toString()}"
                app:layout_constraintBottom_toBottomOf="@id/imageView_listAlchol"
                app:layout_constraintStart_toEndOf="@id/imageView_listAlchol"
                app:layout_constraintTop_toTopOf="@id/imageView_listAlchol"
                tools:text="19%" />

            <ImageView
                android:id="@+id/list_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="1dp"
                android:background="@null"
                android:src="@mipmap/eye"
                app:layout_constraintBottom_toBottomOf="@id/textView_listCommentCount"
                app:layout_constraintStart_toEndOf="@id/textView_listCommentCount"
                app:layout_constraintTop_toTopOf="@id/textView_listCommentCount" />

            <TextView
                android:id="@+id/list_eyeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:lineSpacingExtra="3sp"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/gridItem_default_textsize"
                app:layout_constraintBottom_toBottomOf="@id/list_eye"
                app:layout_constraintStart_toEndOf="@id/list_eye"
                app:layout_constraintTop_toTopOf="@id/list_eye"
                tools:text="999" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/myFavorite_brokenItem"
                android:layout_width="65dp"
                android:layout_height="0dp"
                android:background="@drawable/selector_favorite_item_delete"
                app:el_duration="500"
                app:el_expanded="false"
                app:el_parallax="0.5"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/broken_heart"
                    android:layout_gravity="center_horizontal|center_vertical"/>
            </net.cachapa.expandablelayout.ExpandableLayout>

            <View
                android:id="@+id/monthly_boundary"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>