<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_layout_outline"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:maxLines="2"
        android:fontFamily="@font/apple_sd_gothic_neo_m"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="10sp"
        android:text="로그인 후에 이용할 수 있습니다.\n로그인 하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/light_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_cancelButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="취소"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/dialog_okButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="확인"
            android:textSize="17sp"
            android:textColor="@color/orange"
            android:fontFamily="@font/apple_sd_gothic_neo_m"
            android:layout_weight="1" />


    </LinearLayout>
</LinearLayout>



