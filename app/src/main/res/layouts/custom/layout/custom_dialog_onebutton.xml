<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_layout_outline"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/customDialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#222222"
        android:lineSpacingExtra="7sp"
        android:gravity="center_horizontal"
        android:text="업데이트 알림"
        android:layout_marginTop="17dp"
        />

    <TextView
        android:id="@+id/dialog_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:maxLines="2"
        android:fontFamily="@font/apple_sd_gothic_neo_m"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="10sp"
        android:text="새로운 버전이 출시되었습니다.\n필수 업데이트를 진행해 주세요!"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/orange"/>


    <Button
        android:id="@+id/onebutton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="확인"
        android:textSize="17sp"
        android:textColor="@color/orange"
        android:fontFamily="@font/apple_sd_gothic_neo_m"
       />
</LinearLayout>



