<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_base_width="1080"
            app:scale_base_height="200">

                <ImageView
                    android:id="@+id/basicHeader_backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_left = "20"
                    android:layout_gravity="bottom"
                    android:onClick="onClick"
                    android:src="@mipmap/btn_top_back"
                   />

                <TextView
                    android:id="@+id/basicHeader_windowName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2sp"
                    android:textColor="@color/black"
                    android:hint="설 정"
                    android:fontFamily="@font/apple_sd_gothic_neo_b"
                    android:layout_gravity="center_horizontal|bottom"
                    app:scale_width = "320"
                    app:scale_height = "100"
                    app:scale_textsize = "50"
                    android:gravity="center_horizontal|center_vertical"
                     />

        </com.ssomai.android.scalablelayout.ScalableLayout>
    </LinearLayout>
</layout>
