<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rated_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toTopOf="@id/rated_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rated_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:onClick="onClick"
            android:src="@mipmap/white_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scale_base_height="70"
            app:scale_base_width="1080">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/apple_sd_gothic_neo_sb"
                android:gravity="center_vertical|center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="내가 평가한 주류"
                android:textColor="#ffffff"
                android:textStyle="normal"
                app:scale_height="70"
                app:scale_textsize="44"
                app:scale_width="470"
                app:textview_wrapcontent_direction="bottom"
                app:textview_wrapcontent_movesiblings="true"
                app:textview_wrapcontent_resizesurrounded="true" />
        </com.ssomai.android.scalablelayout.ScalableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
