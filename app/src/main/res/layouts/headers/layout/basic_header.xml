<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/windowHeader_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/basic_backbutton_marginBottom"
            android:layout_marginBottom="@dimen/basic_backbutton_marginBottom"
            android:background="@null"
            android:onClick="onClick"
            android:src="@mipmap/main_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/windowHeader_listCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:onClick="onClick"
            android:src="@mipmap/list_menu"
            app:layout_constraintBottom_toBottomOf="@id/windowHeader_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/windowHeader_logo"
            />

        <ImageView
            android:id="@+id/windowHeader_SearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:src="@mipmap/search_btn"
            app:layout_constraintBottom_toBottomOf="@id/windowHeader_listCategory"
            app:layout_constraintEnd_toStartOf="@+id/windowHeader_listCategory"
            app:layout_constraintTop_toTopOf="@+id/windowHeader_listCategory" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>