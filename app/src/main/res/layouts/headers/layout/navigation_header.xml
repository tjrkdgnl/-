<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"  tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/navigation_header_Profile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:src="@mipmap/navigation_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/navigation_header_Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/navigation_name_size"
            android:textColor="#333333"
            android:lineSpacingExtra="3sp"
            android:fontFamily="@font/apple_sd_gothic_neo_sb"
            android:text="안녕하세요,"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/navigation_header_Profile"
            app:layout_constraintStart_toEndOf="@id/navigation_header_Profile"
            android:layout_marginStart="23dp"
             />
        <TextView
            android:id="@+id/navigation_header_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/navigation_name_hello"
            android:layout_marginTop="4dp"
            android:textColor="#333333"
            android:lineSpacingExtra="3sp"
            android:fontFamily="@font/apple_sd_gothic_neo_sb"
            android:text="로그인하시겠어요?"
            app:layout_constraintTop_toBottomOf="@id/navigation_header_Name"
            app:layout_constraintStart_toStartOf="@id/navigation_header_Name"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
