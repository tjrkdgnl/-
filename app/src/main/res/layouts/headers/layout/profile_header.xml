<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rated_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alcohol_rated_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/apple_sd_gothic_neo_sb"
            android:lineSpacingExtra="9sp"
            android:textColor="#222222"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="김현주님," />

        <TextView
            android:id="@+id/rated_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="7dp"
            android:ellipsize="end"
            android:fontFamily="@font/apple_sd_gothic_neo_sb"
            android:lineSpacingExtra="6sp"
            android:maxLines="1"
            android:textColor="#7a7a7a"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rated_level_name"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/alcohol_rated_name"
            app:layout_constraintTop_toBottomOf="@id/alcohol_rated_name"
            tools:text="총 1500개의 주류를 평가하셨습니다" />


        <TextView
            android:id="@+id/rated_level_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:fontFamily="@font/apple_sd_gothic_neo_sb"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/orange"
            android:textSize="13sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/rated_count_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rated_count_text"
            tools:text="주도를 수련하는 사람" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


