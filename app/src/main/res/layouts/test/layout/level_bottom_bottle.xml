<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainLayout_levelBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myLevel_mainWindow">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/ligthGrey2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textView_evaluation_noticeNextLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/apple_sd_gothic_neo_b"
            android:lineSpacingExtra="2sp"
            android:text="마시는 척하는 사람"
            android:textColor="@color/orange"
            android:textSize="20sp"

            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/imageView_evaluationByMe_bottleLv1"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/textView_evaluation_noticeNextLevelCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/apple_sd_gothic_neo_sb"
            android:gravity="bottom"
            android:lineSpacingExtra="2sp"
            android:text="까지 0병 남았습니다."
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toTopOf="@id/textView_evaluation_noticeNextLevelText"
            app:layout_constraintBottom_toBottomOf="@id/textView_evaluation_noticeNextLevelText"
            app:layout_constraintStart_toEndOf="@id/textView_evaluation_noticeNextLevelText" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_evaluation_noticeNextLevelText" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv3"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv1"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv1" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv4"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv2"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv2" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv5"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv3"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv3" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv6"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv4"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv4" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv7"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv5"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv5" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv8"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv6"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv6" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv9"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv7"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv7" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toStartOf="@id/imageView_evaluationByMe_bottleLv10"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv8"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv8" />

        <ImageView
            android:id="@+id/imageView_evaluationByMe_bottleLv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/mini_bottle_empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView_evaluationByMe_bottleLv9"
            app:layout_constraintTop_toTopOf="@id/imageView_evaluationByMe_bottleLv9" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_evaluationByMe_bottleLv1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
