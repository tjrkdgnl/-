<resources>

    <!-- Base application theme. -->

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/background</item>
    </style>


    //customDialog size
    //defalut 65%
    <style name="custom_dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">65%</item> //landscape 모드일 때 최소 가로폭
        <item name="android:windowMinWidthMinor">65%</item> // portrait 모드일 때 최소 가로폭
    </style>

    <style name="TabLayoutSelectedTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    //커서 색깔
    <style name="cursorColor">
        <item name="colorControlActivated">@color/light_yellow</item>
    </style>

</resources>
